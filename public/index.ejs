              d="M361.5 1.2c5 2.1 8.6 6.6 9.6 11.9L391 121l107.9 19.8c5.3 1 9.8 4.6 11.9 9.6s1.5 10.7-1.6 15.2L446.9 256l62.3 90.3c3.1 4.5 3.7 10.2 1.6 15.2s-6.6 8.6-11.9 9.6L391 391 371.1 498.9c-1 5.3-4.6 9.8-9.6 11.9s-10.7 1.5-15.2-1.6L256 446.9l-90.3 62.3c-4.5 3.1-10.2 3.7-15.2 1.6s-8.6-6.6-9.6-11.9L121 391 13.1 371.1c-5.3-1-9.8-4.6-11.9-9.6s-1.5-10.7 1.6-15.2L65.1 256 2.8 165.7c-3.1-4.5-3.7-10.2-1.6-15.2s6.6-8.6 11.9-9.6L121 121 140.9 13.1c1-5.3 4.6-9.8 9.6-11.9s10.7-1.5 15.2 1.6L256 65.1 346.3 2.8c4.5-3.1 10.2-3.7 15.2-1.6zM160 256a96 96 0 1 1 192 0 96 96 0 1 1 -192 0zm224 0a128 128 0 1 0 -256 0 128 128 0 1 0 256 0z"
            />
          </svg>
        </a>
        <% } else { %>
        <a
          title="Set theme to light"
          class="theme-switch narrow"
          href="/?set-theme=light"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
            <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
            <path
              d="M223.5 32C100 32 0 132.3 0 256S100 480 223.5 480c60.6 0 115.5-24.2 155.8-63.4c5-4.9 6.3-12.5 3.1-18.7s-10.1-9.7-17-8.5c-9.8 1.7-19.8 2.6-30.1 2.6c-96.9 0-175.5-78.8-175.5-176c0-65.8 36-123.1 89.3-153.3c6.1-3.5 9.2-10.5 7.7-17.3s-7.3-11.9-14.3-12.5c-6.3-.5-12.6-.8-19-.8z"
            />
          </svg>
        </a>
        <%}%>
      </div>
      <% if (theme ==="light" ) { %>
      <a
        title="Set theme to dark"
        class="theme-switch wide"
        href="/?set-theme=dark"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
          <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
          <path
            d="M223.5 32C100 32 0 132.3 0 256S100 480 223.5 480c60.6 0 115.5-24.2 155.8-63.4c5-4.9 6.3-12.5 3.1-18.7s-10.1-9.7-17-8.5c-9.8 1.7-19.8 2.6-30.1 2.6c-96.9 0-175.5-78.8-175.5-176c0-65.8 36-123.1 89.3-153.3c6.1-3.5 9.2-10.5 7.7-17.3s-7.3-11.9-14.3-12.5c-6.3-.5-12.6-.8-19-.8z"
          />
        </svg>
      </a>
      <% } else { %>
      <a
        title="Set theme to light"
        class="theme-switch wide"
        href="/?set-theme=light"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
          <path
            d="M361.5 1.2c5 2.1 8.6 6.6 9.6 11.9L391 121l107.9 19.8c5.3 1 9.8 4.6 11.9 9.6s1.5 10.7-1.6 15.2L446.9 256l62.3 90.3c3.1 4.5 3.7 10.2 1.6 15.2s-6.6 8.6-11.9 9.6L391 391 371.1 498.9c-1 5.3-4.6 9.8-9.6 11.9s-10.7 1.5-15.2-1.6L256 446.9l-90.3 62.3c-4.5 3.1-10.2 3.7-15.2 1.6s-8.6-6.6-9.6-11.9L121 391 13.1 371.1c-5.3-1-9.8-4.6-11.9-9.6s-1.5-10.7 1.6-15.2L65.1 256 2.8 165.7c-3.1-4.5-3.7-10.2-1.6-15.2s6.6-8.6 11.9-9.6L121 121 140.9 13.1c1-5.3 4.6-9.8 9.6-11.9s10.7-1.5 15.2 1.6L256 65.1 346.3 2.8c4.5-3.1 10.2-3.7 15.2-1.6zM160 256a96 96 0 1 1 192 0 96 96 0 1 1 -192 0zm224 0a128 128 0 1 0 -256 0 128 128 0 1 0 256 0z"
          />
        </svg>
      </a>
      <%}%>
      <label id="close-menu-overlay" for="nav-menu-toggle"></label>
    </nav>
    <header id="landing">
      <% if (specialTheme !=="no-theme" ) { %>
      <div id="theme-overlay">
        <div id="theme-container"></div>
      </div>
      <% } %>
      <div class="landing-text col-center">
        <h1 class="theme-font section-heading">Hi I'm Niall</h1>
        <p class="theme-font">I'm a full-stack developer</p>
      </div>
    </header>
    <main>
      <section id="about" class="container">
        <h1 class="theme-font section-heading" title="About me">About</h1>
        <p>
          I am a full-stack developer by trade, however I have worked on many
          different tech stacks for different purposes in the past, including an
          embedded Lua scripting project.
        </p>
        <div id="about-panels">
          <div id="about-panel-companies">
            <p>I delivered projects for these companies</p>
            <div id="companies">
              <% for (let company of companies) { %>
              <a
                class="company"
                target="_blank"
                href="<%= company.url %>"
                title="<%= company.name %>"
              >
                <img
                  src="<%= company.img %>"
                  height="40px"
                  width="<%= Math.round(company.aspectRatio * 40) %>px"
                  alt="<%= company.name %> Logo"
                />
              </a>
              <% } %>
            </div>
          </div>
          <div id="about-panel-text">
            <p>
              I program as a hobby and love to explore a variety of concepts in
              computer science by implementing them myself. Highly motivated and
              creative thinker in terms of theory application and software
              engineering. More of a "make it work" rather than "make it look
              good" type of person.
            </p>
            <div class="button-group">
              <a href="/cv" class="button primary" target="_blank">
                <span>Online CV</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M352 0c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9L370.7 96 201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L416 141.3l41.4 41.4c9.2 9.2 22.9 11.9 34.9 6.9s19.8-16.6 19.8-29.6V32c0-17.7-14.3-32-32-32H352zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"
                  />
                </svg>
              </a>
              <a
                href="/cv/pdf-download"
                class="button secondary"
                target="_blank"
              >
                <span>PDF CV</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M64 0C28.7 0 0 28.7 0 64V448c0 35.3 28.7 64 64 64H320c35.3 0 64-28.7 64-64V160H256c-17.7 0-32-14.3-32-32V0H64zM256 0V128H384L256 0zM216 232V334.1l31-31c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-72 72c-9.4 9.4-24.6 9.4-33.9 0l-72-72c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l31 31V232c0-13.3 10.7-24 24-24s24 10.7 24 24z"
                  />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
      <section id="projects">
        <h1 class="theme-font section-heading" title="Projects">Projects</h1>
        <input id="projects-toggle" class="hidden" type="checkbox" />
        <div id="project-container" role="feed">
          <% for (let project of projects) { %>
          <article>
            <a
              href="javascript:return false"
              title="<%= project.title %>"
              class="project"
              data-github="<%= project.github %>"
            >
              <img
                class="project-thumbnail"
                src="<%= project.img %>"
                alt="<%= project.title %> Thumbnail"
              />
              <div class="project-text">
                <h2><%= project.title %></h2>
                <p><%= project.description %></p>
              </div>
            </a>
          </article>
          <% } %>
        </div>
        <div class="container col-center">
          <p class="projects-showing more-projects-text">
            I have many more projects (including non-web ones) on
            <a href="https://github.com/eniallator/" target="_blank">
              my github
            </a>
            .
          </p>
          <div class="projects-toggle-button">
            <label tabindex="0" for="projects-toggle" class="secondary button">
              <span class="projects-not-showing">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M201.4 342.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 274.7 86.6 137.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"
                  />
                </svg>
              </span>
              <span class="projects-showing">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M201.4 137.4c12.5-12.5 32.8-12.5 45.3 0l160 160c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L224 205.3 86.6 342.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l160-160z"
                  />
                </svg>
              </span>
            </label>
          </div>
        </div>
        <dialog id="project-preview">
          <form method="dialog">
            <div class="header">
              <h3></h3>
              <button class="button close-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
                  />
                </svg>
              </button>
            </div>
            <iframe title="Project Preview"></iframe>
            <div class="button-group">
              <a class="button primary js-preview" href="#" target="_blank">
                <span>Open</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M352 0c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9L370.7 96 201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L416 141.3l41.4 41.4c9.2 9.2 22.9 11.9 34.9 6.9s19.8-16.6 19.8-29.6V32c0-17.7-14.3-32-32-32H352zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"
                  />
                </svg>
              </a>
              <a
                class="button secondary js-repository"
                href="#"
                target="_blank"
              >
                <span>Repository</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                  <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                  <path
                    d="M88.7 223.8L0 375.8V96C0 60.7 28.7 32 64 32H181.5c17 0 33.3 6.7 45.3 18.7l26.5 26.5c12 12 28.3 18.7 45.3 18.7H416c35.3 0 64 28.7 64 64v32H144c-22.8 0-43.8 12.1-55.3 31.8zm27.6 16.1C122.1 230 132.6 224 144 224H544c11.5 0 22 6.1 27.7 16.1s5.7 22.2-.1 32.1l-112 192C453.9 474 443.4 480 432 480H32c-11.5 0-22-6.1-27.7-16.1s-5.7-22.2 .1-32.1l112-192z"
                  />
                </svg>
              </a>
            </div>
          </form>
        </dialog>
      </section>
      <section id="contact" class="container">
        <h1 class="theme-font section-heading" title="Contact me">Contact</h1>
        <div class="contact-links">
          <a href="https://github.com/eniallator">
            <% if (theme ==="light" ) { %>
            <img
              alt="Github Icon"
              src="/static/images/github-icon-dark.png"
              width="40"
              height="40"
            />
            <% } else { %>
            <img
              alt="Github Icon"
              src="/static/images/github-icon-light.png"
              width="40"
              height="40"
            />
            <%}%>
          </a>
          <a href="https://www.linkedin.com/in/niall-coleman-clarke/">
            <% if (theme ==="light" ) { %>
            <img
              alt="Linkedin Icon"
              src="/static/images/linkedin-icon-dark.png"
              width="40"
              height="40"
            />
            <% } else { %>
            <img
              alt="Linkedin Icon"
              src="/static/images/linkedin-icon-light.png"
              width="40"
              height="40"
            />
            <%}%>
          </a>
        </div>
        <form accept-charset="utf-8" action="" method="POST">
          <!-- Honey Pots -->
          <div class="ignore">
            <input tabindex="-1" name="phone" placeholder="Phone" type="text" />
            <input tabindex="-1" name="city" placeholder="City" type="text" />
            <input
              tabindex="-1"
              name="address"
              placeholder="Address"
              type="text"
            />
            <input
              tabindex="-1"
              name="country"
              placeholder="Country"
              type="text"
            />
            <input
              tabindex="-1"
              name="zip code"
              placeholder="Zip Code"
              type="text"
            />
          </div>
          <!-- Form Content -->
          <div class="fields">
            <input name="name" type="text" placeholder="Name" required />
            <input
              name="email"
              type="email"
              placeholder="Email"
              required
              pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$"
            />
            <textarea
              name="message"
              placeholder="Message"
              rows="4"
              required
            ></textarea>
            <input type="submit" class="button secondary" value="Submit" />
          </div>
        </form>
      </section>
    </main>
    <script src="/static/js/index.js"></script>
    <% if (specialTheme !=="no-theme" ) { %>
    <script src="/static/js/themes/<%= specialTheme %>.js"></script>
    <% } %>
  </body>
</html>
